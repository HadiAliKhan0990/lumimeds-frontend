# ============================================================================
# LumiMeds Next.js Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in the values
# cp .env.example .env.local

# ============================================================================
# ENCRYPTION (SHARED ACROSS ALL ENVIRONMENTS)
# ============================================================================
# ⚠️ IMPORTANT: These values MUST be the same across dev, staging, and production
# Changing these will break encryption/decryption of existing localStorage data
NEXT_PUBLIC_ENCRYPTION_KEY=your-encryption-key-here-min-32-chars
NEXT_PUBLIC_ENCRYPTION_SALT=lumimeds-salt-2024

# ============================================================================
# API & SITE CONFIGURATION
# ============================================================================
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Frontend site URL (used for sitemap, robots.txt, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Environment name (development, staging, production)
NEXT_PUBLIC_ENV=development

# ============================================================================
# SEO & INDEXING
# ============================================================================
# Allow search engines to index pages (false for dev/staging, true for production)
NEXT_PUBLIC_ALLOW_INDEXING=false

# Product summary page indexing control
ALLOW_PRODUCT_SUMMARY_INDEXING=false

# ============================================================================
# AWS S3 CONFIGURATION
# ============================================================================
# Allowed S3 bucket hostnames for secure file URL validation (comma-separated)
# Example: lumi-stag.s3.us-east-2.amazonaws.com,lumimeds-prod.s3.us-east-2.amazonaws.com
NEXT_PUBLIC_ALLOWED_S3_HOSTNAMES=

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================
# HubSpot Portal ID for tracking
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================================================
# TRUSTPILOT CONFIGURATION
# ============================================================================
NEXT_PUBLIC_TRUSTPILOT_BUSINESS_UNIT_ID=
NEXT_PUBLIC_TRUSTPILOT_API_KEY=
NEXT_PUBLIC_TRUSTPILOT_SECRET_KEY=
NEXT_PUBLIC_TRUSTPILOT_API_URL=https://api.trustpilot.com/v1
NEXT_PUBLIC_TRUSTPILOT_REVIEW_URL=https://www.trustpilot.com/review/lumimeds.com
NEXT_PUBLIC_TRUST_PILOT_ENGLISH_TEMPLATE_ID=
NEXT_PUBLIC_TRUST_PILOT_SPANISH_TEMPLATE_ID=
NEXT_PUBLIC_TRUST_PILOT_THEME_TOKEN_LIGHT=
NEXT_PUBLIC_TRUSTPILOT_SCRIPT_URL=//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js

# ============================================================================
# CALENDLY CONFIGURATION
# ============================================================================
NEXT_PUBLIC_CALENDLY_CLIENT_ID=
NEXT_PUBLIC_CALENDLY_REDIRECT_URI=http://localhost:3000/provider
NEXT_PUBLIC_CALENDLY_AUTH_URL=
# Comma-separated list of whitelisted emails for Calendly access
NEXT_PUBLIC_CALENDLY_WHITELIST_EMAILS=

# ============================================================================
# SURVEY & INTAKE CONFIGURATION
# ============================================================================
# Poll interval for intake survey (in seconds)
NEXT_PUBLIC_INTAKE_SURVEY_POLL_INTERVAL_SECONDS=5

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=development

# ============================================================================
# NOTES
# ============================================================================
# 1. NEXT_PUBLIC_* variables are exposed to the browser - don't put secrets here
# 2. NEXT_PUBLIC_ENCRYPTION_KEY and NEXT_PUBLIC_ENCRYPTION_SALT must be the same
#    across all environments (dev, staging, production)
# 3. For local development, you can use staging API URLs
# 4. Set NEXT_PUBLIC_ALLOW_INDEXING=false for dev/staging, true for production
# 5. Restart dev server after changing environment variables
